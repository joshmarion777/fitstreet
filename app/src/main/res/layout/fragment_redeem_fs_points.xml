<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/rl_btn_buy"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/c_current_balance"
                android:gravity="center"
                android:id="@+id/rl_current_balance">

                <affle.com.fitstreet.customviews.CustomTypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_current_fs_points_balance"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s_txt_current_balance"
                    android:gravity="center" />

                <affle.com.fitstreet.customviews.CustomTypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/current_balance"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/s_txt_size_balance"
                    android:layout_below="@id/tv_current_fs_points_balance" />
            </RelativeLayout>

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textAllCaps="true"
                android:textSize="@dimen/s_txt_16sp"
                android:padding="@dimen/dp10"
                android:textColor="@color/c_dark_grey"
                android:layout_below="@id/rl_current_balance" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:textColor="@color/c_gray_text"
                android:textSize="@dimen/txt_size_sp12"
                android:gravity="start"
                android:text="@string/txt_description_text_redeem_points" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_to_redeem"
                android:textAllCaps="true"
                android:textSize="@dimen/s_txt_16sp"
                android:padding="@dimen/dp10"
                android:textColor="@color/c_dark_grey"
                android:layout_below="@id/rl_current_balance" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:textColor="@color/c_gray_text"
                android:textSize="@dimen/txt_size_sp12"
                android:text="@string/txt_description_how_to_redeem_points" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 1 :- "
                android:id="@+id/tv_option_one"
                android:textAllCaps="true"
                android:textColor="@color/c_dark_grey"
                android:paddingLeft="@dimen/d_mar_extra_large_30dp"
                android:paddingRight="@dimen/dp5"
                android:paddingBottom="@dimen/dp5"
                android:paddingTop="@dimen/dp5"
                android:background="@color/backround_header_expandable_list"
                android:textSize="@dimen/s_txt_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll_option_one"
                android:layout_height="wrap_content">

                <affle.com.fitstreet.customviews.CustomTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d_mar_normal_10dp"
                    android:paddingRight="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:id="@+id/tv_option_one_text"
                    android:textColor="@color/c_gray_text"
                    android:textSize="@dimen/txt_size_sp12" />

                <affle.com.fitstreet.customviews.CustomTypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Check out our cool technologically advanced FitStreet clothing."
                    android:paddingLeft="@dimen/d_mar_normal_10dp"
                    android:paddingRight="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:textColor="@color/c_gray_text"
                    android:textSize="@dimen/txt_size_sp12" />

                <affle.com.fitstreet.customviews.CustomTypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Select products you want to buy after looking at the discount and cash back details."
                    android:paddingLeft="@dimen/d_mar_normal_10dp"
                    android:paddingRight="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:textColor="@color/c_gray_text"
                    android:textSize="@dimen/txt_size_sp12" />

                <affle.com.fitstreet.customviews.CustomTypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Finish your transaction and your cash back will be credited instantly into your account."
                    android:paddingLeft="@dimen/d_mar_normal_10dp"
                    android:paddingRight="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:textColor="@color/c_gray_text"
                    android:textSize="@dimen/txt_size_sp12" />
            </LinearLayout>

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
