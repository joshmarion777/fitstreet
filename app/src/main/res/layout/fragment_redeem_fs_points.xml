                android:textColor="@color/c_dark_grey"
                android:background="@color/backround_header_expandable_list"
                android:textSize="@dimen/s_txt_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll_option_two"
                android:layout_height="wrap_content">

                <affle.com.fitstreet.customviews.CustomTypefaceTextView
                    android:layout_width="wrap_content"
