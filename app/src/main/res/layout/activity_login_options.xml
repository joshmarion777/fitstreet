<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_bg_login_sign_up"
    android:paddingLeft="@dimen/d_pad_rl_login_options"
    android:paddingRight="@dimen/d_pad_rl_login_options"
    tools:context="affle.com.fitstreet.ui.activities.SignUpActivity">

    <affle.com.fitstreet.customviews.CustomTypefaceTextView
        android:id="@+id/tv_skip"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/c_transparent"
        android:paddingTop="@dimen/d_pad_tv_skip"
        android:text="@string/txt_skip"
        android:gravity="end"
        android:textColor="@color/c_white"
        android:textSize="@dimen/s_tv_skip"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_back_login_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/d_pad_tv_skip"
        android:src="@drawable/back" />

    <affle.com.fitstreet.customviews.CustomTypefaceTextView
        android:id="@+id/tv_login_with_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_or"
        android:layout_marginLeft="@dimen/d_mar_large_15dp"
        android:layout_marginRight="@dimen/d_mar_large_15dp"
        android:background="@drawable/x_ds_grey_blue"
        android:drawableLeft="@drawable/facebook"
        android:gravity="center"
        android:padding="@dimen/d_pad_tv_login_options"
        android:text="@string/txt_login_with_fb"
        android:textColor="@color/c_white"
        android:textSize="@dimen/s_tv_login_options"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_height_div_login"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_or"
        android:background="@color/c_grey_btns"
        android:gravity="center" />

    <affle.com.fitstreet.customviews.CustomTypefaceTextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/d_mar_login_or"
        android:text="@string/txt_middel_view_text"
        android:textAlignment="center"
        android:textColor="@color/c_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_height_div_login"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_or"
        android:background="@color/c_grey_btns"
        android:gravity="center" />


    <affle.com.fitstreet.customviews.CustomTypefaceTextView
        android:id="@+id/tv_login_with_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_or"
        android:layout_marginLeft="@dimen/d_mar_large_15dp"
        android:layout_marginRight="@dimen/d_mar_large_15dp"
        android:background="@drawable/x_ds_grey_pink"
        android:drawableLeft="@drawable/mail"
        android:gravity="center"
        android:padding="@dimen/d_pad_tv_login_options"
        android:text="@string/txt_login_mail"
        android:textColor="@color/c_white"
        android:textSize="@dimen/s_tv_login_options"

        />


</RelativeLayout>