<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="@dimen/d_size_wallet_history"
        android:layout_height="@dimen/d_size_wallet_history"
        android:padding="@dimen/dp10"
        android:src="@drawable/no_image_available"
        android:id="@+id/iv_product_type" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/ll_cashback_history"
        android:layout_toRightOf="@id/iv_product_type"
        android:orientation="vertical">

        <affle.com.fitstreet.customviews.CustomTypefaceTextView
            android:layout_width="match_parent"
            android:singleLine="true"
            android:textSize="@dimen/txt_size_sp12"
            android:textAllCaps="true"
            android:paddingTop="@dimen/dp10"
            android:id="@+id/tv_product_name_cahback_history"
            android:paddingRight="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:textColor="@color/c_green_switch"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:textSize="@dimen/txt_size_sp12"
                android:singleLine="true"
                android:id="@+id/tv_order_number"
                android:text="@string/order_number"
                android:layout_height="wrap_content" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:gravity="center"
                android:textSize="@dimen/txt_size_sp12"
                android:layout_height="wrap_content"
                android:text=":" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:textSize="@dimen/txt_size_sp12"
                android:singleLine="true"
                android:id="@+id/tv_order_number_value"
                android:layout_height="wrap_content"
                android:gravity="start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:textSize="@dimen/txt_size_sp12"
                android:text="@string/redeemed_fs_points"
                android:singleLine="true"
                android:id="@+id/tv_redeemed_fs_points"
                android:layout_height="wrap_content" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:gravity="center"
                android:textSize="@dimen/txt_size_sp12"
                android:layout_height="wrap_content"
                android:text=":" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:singleLine="true"
                android:textSize="@dimen/txt_size_sp12"
                android:id="@+id/tv_redeemed_fs_points_value"
                android:layout_height="wrap_content"
                android:gravity="start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_expected_date"
            android:orientation="horizontal">

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:text="@string/expected_date"
                android:singleLine="true"
                android:textSize="@dimen/txt_size_sp12"
                android:id="@+id/tv_expected_date"
                android:layout_height="wrap_content" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:gravity="center"
                android:textSize="@dimen/txt_size_sp12"
                android:textColor="@color/c_green_switch"
                android:layout_height="wrap_content"
                android:text=":" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:singleLine="true"
                android:textSize="@dimen/txt_size_sp12"
                android:id="@+id/tv_expected_date_value"
                android:layout_height="wrap_content"
                android:gravity="start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:text="@string/cashback_you_got"
                android:singleLine="true"
                custom:font_name_with_asset_path="fonts/Roboto-Bold.ttf"
                android:textColor="@color/darker_gray_tab_indicator"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_sp12"
                android:id="@+id/tv_cashback_you_got"
                android:layout_height="wrap_content" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:gravity="center"
                android:textSize="@dimen/txt_size_sp12"
                android:textColor="@color/c_green_switch"
                android:layout_height="wrap_content"
                android:text=":" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:singleLine="true"
                android:textSize="@dimen/txt_size_sp12"
                custom:font_name_with_asset_path="fonts/Roboto-Bold.ttf"
                android:textColor="@color/darker_gray_tab_indicator"
                android:textStyle="bold"
                android:id="@+id/tv_cashback_you_got_value"
                android:layout_height="wrap_content"
                android:gravity="start" />
        </LinearLayout>
    </LinearLayout>

    <affle.com.fitstreet.customviews.CustomTypefaceTextView
        android:id="@+id/tv_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/txt_size_sp12"
        android:layout_below="@id/ll_cashback_history"
        android:paddingLeft="@dimen/d_mar_normal_10dp"
        android:paddingRight="@dimen/d_mar_normal_10dp"
        android:textColor="@color/c_gray_text" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_below="@id/tv_order_date"
        android:background="@color/c_gray_text"></View>
</RelativeLayout>