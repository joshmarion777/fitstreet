<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <affle.com.fitstreet.customviews.CustomTypefaceTextView
        android:id="@+id/tv_title_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_text_tutorial"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/d_pad_tv_tutorial_info"
        android:textAllCaps="true"
        android:text="@string/txt_title_tutorial_first"
        android:textColor="@color/c_white"
        android:textSize="@dimen/s_txt_tutorial_title"
        android:textStyle="bold" />

    <affle.com.fitstreet.customviews.CustomTypefaceTextView
        android:id="@+id/tv_text_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/d_mar_tv_tutorial_text"
        android:textAllCaps="true"
        android:gravity="center"
        android:padding="@dimen/d_pad_tv_tutorial_text"
        android:text="@string/txt_tutorial_first"
        android:textColor="@color/c_white"
        android:textSize="@dimen/s_txt_tutorial_text" />


</RelativeLayout>