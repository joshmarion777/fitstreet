<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/card_order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <affle.com.fitstreet.customviews.CustomTypefaceTextView
                        android:id="@+id/tv_product_serial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true" />

                    <RelativeLayout
                        android:id="@+id/iv_ordered_product_image_layout"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/tv_product_serial">

                        <ImageView
                            android:id="@+id/iv_contest_image"
                            android:layout_width="100dp"
                            android:padding="@dimen/d_mar_normal_10dp"
                            android:layout_height="150dp"
                            android:scaleType="fitXY" />
                    </RelativeLayout>

                    <affle.com.fitstreet.customviews.CustomTypefaceTextView
                        android:id="@+id/ordered_product_name"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_ordered_product_image_layout"
                        android:paddingLeft="@dimen/d_mar_normal_10dp"
                        android:paddingRight="@dimen/d_mar_normal_10dp"
                        android:paddingTop="@dimen/d_mar_normal_10dp"
                        android:textColor="@color/c_green_switch" />

                    <LinearLayout
                        android:id="@+id/ll_order_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ordered_product_name"
                        android:layout_toRightOf="@id/iv_ordered_product_image_layout"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/d_mar_normal_10dp"
                        android:paddingLeft="@dimen/d_mar_normal_10dp"
                        android:paddingRight="@dimen/d_mar_normal_10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:singleLine="true"
                                android:text="@string/size"
                                android:textSize="@dimen/txt_size_sp12" />

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:gravity="center"
                                android:text=":" />

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:id="@+id/tv_size"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textSize="@dimen/txt_size_sp12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:singleLine="true"
                                android:text="Color"
                                android:textSize="@dimen/txt_size_sp12" />

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:gravity="center"
                                android:text=":" />

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:id="@+id/tv_color"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textSize="@dimen/txt_size_sp12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:singleLine="true"
                                android:text="Discount"
                                android:textSize="@dimen/txt_size_sp12" />

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:gravity="center"
                                android:text=":" />

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:id="@+id/tv_discount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textSize="@dimen/txt_size_sp12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:singleLine="true"
                                android:text="Quantity"
                                android:textSize="@dimen/txt_size_sp12" />

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:gravity="center"
                                android:text=":" />

                            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                                android:id="@+id/tv_quantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textSize="@dimen/txt_size_sp12" />
                        </LinearLayout>

                    </LinearLayout>

                    <affle.com.fitstreet.customviews.CustomTypefaceTextView
                        android:id="@+id/tv_actual_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/ll_order_layout"
                        android:paddingLeft="@dimen/d_mar_normal_10dp"
                        android:paddingRight="@dimen/d_mar_normal_10dp"
                        android:paddingTop="@dimen/d_mar_normal_10dp"
                        android:textColor="@color/c_gray_text" />

                    <affle.com.fitstreet.customviews.CustomTypefaceTextView
                        android:id="@+id/tv_discounted_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_actual_price"
                        android:paddingBottom="@dimen/d_mar_normal_10dp"
                        android:paddingLeft="@dimen/d_mar_normal_10dp"
                        android:paddingRight="@dimen/d_mar_normal_10dp"
                        android:textColor="@color/c_black" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view_selected_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c_black_overlay"
                android:visibility="gone" />

            <affle.com.fitstreet.customviews.CustomTypefaceTextView
                android:id="@+id/tv_order_cancelled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/order_cancelled"
                android:textColor="@color/c_white"
                android:textSize="29sp"
                android:visibility="gone" />
        </FrameLayout>
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/view_gap"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/card_order_details"
        android:layout_marginBottom="@dimen/dp10"
        android:visibility="visible" />
</RelativeLayout>