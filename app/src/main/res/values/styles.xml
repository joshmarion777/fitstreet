<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowActionModeOverlay">true</item>-->

    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_transparent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/s_txt_btns</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_splash" parent="btn_transparent">
        <item name="android:textColor">@color/c_white</item>
    </style>

    <style name="edittext_login_sign_up">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/x_ds_white</item>
        <item name="android:layout_marginTop">@dimen/d_mar_et_login_sign_up</item>
        <item name="android:padding">@dimen/d_pad_et</item>
        <item name="android:textColor">@color/c_txt_et_login_sign_up</item>
        <item name="android:textColorHint">@color/c_hint_et_login_sign_up</item>
        <item name="android:textSize">@dimen/s_et_login_signup</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="textview_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/d_mar_lr_settings</item>
        <item name="android:layout_marginRight">@dimen/d_mar_lr_settings</item>
        <item name="android:textSize">@dimen/s_title_settings</item>
    </style>

    <style name="textview_settings_title" parent="@style/textview_settings">
        <item name="android:textColor">@color/c_settings_title</item>
        <item name="android:layout_marginTop">@dimen/d_mar_t_settings_title</item>
    </style>

    <style name="textview_settings_text" parent="@style/textview_settings">
        <item name="android:textColor">@color/c_settings_text</item>
        <item name="android:drawablePadding">@dimen/d_dpad_settings_text</item>
        <item name="android:layout_marginTop">@dimen/d_mar_settings_text</item>
        <item name="android:layout_marginBottom">@dimen/d_dpad_settings_text</item>
    </style>

    <style name="textview_profile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/d_mar_lr_settings</item>
        <item name="android:layout_marginRight">@dimen/d_mar_lr_settings</item>
    </style>

    <style name="textview_profile_title" parent="@style/textview_profile">
        <item name="android:layout_marginTop">@dimen/d_mar_t_profile_label</item>
        <item name="android:layout_marginBottom">@dimen/d_mar_b_profile_label</item>
        <item name="android:textColor">@color/c_tv_profile_label</item>
        <item name="android:textSize">@dimen/s_tv_profile_label</item>
    </style>

    <style name="textview_profile_text" parent="@style/textview_profile">
        <item name="android:textColor">@color/c_tv_profile_txt</item>
        <item name="android:textSize">@dimen/s_tv_profile_txt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edittext_profile_text" parent="@style/textview_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/c_tv_profile_txt</item>
        <item name="android:textSize">@dimen/s_tv_profile_txt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/c_transparent</item>
        <item name="android:paddingTop">@dimen/d_pad_et_profile_txt</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textview_profile_title_half" parent="@style/textview_profile">
        <item name="android:layout_marginTop">@dimen/d_mar_t_profile_label</item>
        <item name="android:textColor">@color/c_tv_profile_label</item>
        <item name="android:textSize">@dimen/s_tv_profile_label</item>
    </style>

    <style name="textview_address_title" parent="@style/textview_profile">
        <item name="android:layout_marginTop">@dimen/d_mar_t_profile_label</item>
        <item name="android:textColor">@color/c_tv_address_label</item>
        <item name="android:textSize">@dimen/s_tv_profile_label</item>
    </style>

    <style name="textview_address_title_half" parent="@style/textview_profile">
        <item name="android:layout_marginTop">@dimen/d_mar_t_profile_label</item>
        <item name="android:textColor">@color/c_tv_address_label</item>
        <item name="android:textSize">@dimen/s_tv_profile_label</item>
    </style>

    <style name="edittext_address_text" parent="@style/edittext_profile_text">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="edittext_address_multiline_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/d_mar_lr_settings</item>
        <item name="android:layout_marginRight">@dimen/d_mar_lr_settings</item>
        <item name="android:textColor">@color/c_tv_profile_txt</item>
        <item name="android:textSize">@dimen/s_tv_profile_txt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/c_transparent</item>
        <item name="android:paddingTop">@dimen/d_pad_et_profile_txt</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="view_divider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/d_height_underline_profile</item>
        <item name="android:layout_marginLeft">@dimen/d_mar_lr_settings</item>
        <item name="android:layout_marginRight">@dimen/d_mar_lr_settings</item>
    </style>

    <style name="view_profile" parent="view_divider">
        <item name="android:background">@color/c_tv_profile_txt</item>
    </style>

    <style name="view_address" parent="view_divider">
        <item name="android:background">@color/c_tv_address_label</item>
        <item name="android:layout_marginBottom">@dimen/d_mar_b_div_address</item>
    </style>

    <style name="edittext_profile_ht_wt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_tv_profile_txt</item>
        <item name="android:textSize">@dimen/s_tv_profile_txt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/c_transparent</item>
        <item name="android:paddingTop">@dimen/d_pad_et_profile_txt</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="edittext_profile_wt_text" parent="@style/edittext_profile_ht_wt">
        <item name="android:digits">0123456789</item>
    </style>

    <style name="edittext_profile_ht_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_tv_profile_txt</item>
        <item name="android:textSize">@dimen/s_tv_profile_txt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/c_transparent</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="edittext_profile_ht_text_value" parent="edittext_profile_ht_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/d_pad_et_profile_txt</item>
    </style>

    <style name="edittext_profile_ht_text_wheel" parent="edittext_profile_ht_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">@dimen/d_pad_tv_set</item>
        <item name="android:paddingTop">@dimen/d_pad_t_tv_set</item>
    </style>

    <style name="edittext_units" parent="@style/edittext_profile_ht_wt">
        <item name="android:focusable">false</item>
    </style>

    <style name="view_profile_ht_wt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_height_underline_profile</item>
        <item name="android:background">@color/c_tv_profile_txt</item>
    </style>

    <style name="textview_my_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/d_dpad_tv_my_account</item>
        <item name="android:padding">@dimen/d_pad_tv_my_account</item>
        <item name="android:textColor">@color/c_txt_my_account_options</item>
        <item name="android:textSize">@dimen/s_tv_my_account</item>
    </style>

    <style name="edit_text_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:background">@color/c_white</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/d_dpad_et_search</item>
        <item name="android:hint">@string/hint_search_by_name</item>
        <item name="android:padding">@dimen/d_pad_et_search</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/s_et_search_bar</item>
        <item name="android:textColor">@color/c_txt_et_login_sign_up</item>
        <item name="android:textColorHint">@color/c_hint_et_login_sign_up</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <!--<item name="android:elevation" tools:targetApi="lollipop">@dimen/d_elev_et_search</item>-->
    </style>

    <style name="btn_gender_login_sign_up">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/x_sd_btns</item>
        <item name="android:padding">@dimen/d_pad_btn_gender</item>
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textSize">@dimen/s_tv_gender_select</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn_fs_store_size">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/d_fs_store_size_btns</item>
        <item name="android:padding">@dimen/d_pad_btn_gender</item>
        <item name="android:textColor">@drawable/d_fs_store_size_btn_text_color</item>
        <item name="android:textSize">@dimen/txt_select_size_11sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_row_address">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="textview_row_address_title" parent="textview_row_address">
        <item name="android:textColor">@color/c_tv_address_row_green</item>
        <item name="android:textSize">@dimen/s_tv_row_address_title</item>
        <item name="android:paddingBottom">@dimen/d_pad_tb_tv_row_address</item>
    </style>

    <style name="textview_row_address_text" parent="textview_row_address">
        <item name="android:textSize">@dimen/s_tv_row_address_text</item>
        <item name="android:drawablePadding">@dimen/d_dpad_phone_location</item>
    </style>

    <style name="textview_row_address_text_info" parent="textview_row_address_text">
        <item name="android:textColor">@color/c_tv_address_row_grey</item>
        <item name="android:paddingBottom">@dimen/d_pad_tb_tv_row_address</item>
    </style>

    <style name="textview_row_address_text_action" parent="textview_row_address_text">
        <item name="android:textColor">@color/c_tv_address_row_green</item>
        <item name="android:paddingTop">@dimen/d_pad_tb_tv_row_address</item>
        <item name="android:paddingLeft">@dimen/d_dpad_address_action</item>
    </style>

    <style name="textview_filter_popup_action">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/d_pad_tv_filter_action</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/c_txt_filter_popup</item>
        <item name="android:textSize">@dimen/s_tv_filter_popup_action</item>
    </style>

    <style name="textview_share_activity_duration">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/x_sd_share_btns</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/d_pad_tv_share_activity</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/x_sc_tabs_top</item>
        <item name="android:textSize">@dimen/s_tv_share_activity_duration</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="colorAccent">@color/c_color_accent</item>
        <item name="colorPrimaryDark">@color/c_color_primary_dark</item>
        <item name="colorPrimary">@color/c_color_primary</item>
        <item name="colorControlActivated">@color/c_green_switch</item>
        <!--<item name="android:textColorPrimary">@color/c_white</item>-->
    </style>

    <style name="AppTheme.Settings.Dialog" parent="AlertDialog.AppCompat">
        <item name="colorAccent">@color/c_color_accent</item>
        <item name="colorPrimaryDark">@color/c_color_primary_dark</item>
        <item name="colorPrimary">@color/c_color_primary</item>
    </style>

    <style name="AppTheme.EditText" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/c_color_accent</item>
        <item name="colorPrimaryDark">@color/c_color_primary_dark</item>
        <item name="colorPrimary">@color/c_color_primary</item>
        <item name="colorControlActivated">@color/c_green_switch</item>
        <item name="android:textColorPrimary">@color/c_white</item>
        <item name="android:textColorHint">@color/c_hint_et_login_sign_up</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/s_tab_text</item>
    </style>

    <style name="AppTheme.EditProfile" parent="AppTheme">
        <item name="colorAccent">@color/c_color_accent</item>
        <item name="colorPrimaryDark">@color/c_color_primary_dark</item>
        <item name="colorPrimary">@color/c_color_primary</item>
        <item name="colorControlActivated">@color/c_green_switch</item>
    </style>

    <style name="EditText.Theme.Profile" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/c_hint_change_pwd</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/c_color_accent</item>
    </style>

    <style name="EditText.Theme" parent="AppTheme">
        <item name="colorAccent">@color/c_hint_change_pwd</item>
        <item name="colorControlActivated">@color/c_hint_change_pwd</item>

    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomProgressDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>


    <style name="ProgressDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomProgressDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
